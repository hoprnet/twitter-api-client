{
  "name": "@hoprnet/twitter-api-client",
  "version": "0.1.7",
  "description": "Node.js / JavaScript client for Twitter API",
  "main": "dist/index.js",
  "scripts": {
    "prestart": "npm run build",
    "build": "tsc",
    "test": "jest"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FeedHive/twitter-api-client.git"
  },
  "keywords": [
    "node.js",
    "javascript",
    "twitter",
    "api"
  ],
  "author": "FeedHive",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FeedHive/twitter-api-client/issues"
  },
  "homepage": "https://github.com/FeedHive/twitter-api-client#readme",
  "dependencies": {
    "oauth": "^0.9.15",
    "object-sizeof": "^1.6.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "ts-jest": "^26.1.3",
    "@sinonjs/fake-timers": "^6.0.1",
    "jest": "^26.1.0",
    "@types/jest": "^26.0.5",
    "@types/node": "^13.11.1",
    "@types/oauth": "^0.9.1",
    "@types/sinonjs__fake-timers": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverage": true
  }
}
